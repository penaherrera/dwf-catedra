<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">
    <persistence-unit name="default">
        <!-- Lista de las clases que representan las entidades -->
        <class>sv.edu.udb.dwfcatedra.repository.domain.Usuario</class>
        <class>sv.edu.udb.dwfcatedra.repository.domain.Noticia</class>
        <class>sv.edu.udb.dwfcatedra.repository.domain.Evento</class>
        <class>sv.edu.udb.dwfcatedra.repository.domain.Miembro</class>
        <class>sv.edu.udb.dwfcatedra.repository.domain.Jugador</class>
        <class>sv.edu.udb.dwfcatedra.repository.domain.Tecnico</class>
        <class>sv.edu.udb.dwfcatedra.repository.domain.Beneficio</class>
        <class>sv.edu.udb.dwfcatedra.repository.domain.Plan</class>
        <class>sv.edu.udb.dwfcatedra.repository.domain.Plantilla</class>
        <class>sv.edu.udb.dwfcatedra.repository.domain.Suscripcion</class>
        <class>sv.edu.udb.dwfcatedra.repository.domain.Marca</class>
        <properties>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/club_management"/>
            <property name="jakarta.persistence.jdbc.user" value="usuario"/>
            <property name="jakarta.persistence.jdbc.password" value="usuario"/>
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="jakarta.persistence.schema-generation.database.action" value="drop-and-create"/>
        </properties>
    </persistence-unit>
</persistence>
